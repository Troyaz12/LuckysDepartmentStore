@model LuckysDepartmentStore.Models.ViewModels.Discount.DiscountVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discount Details</title>   
</head>
<h1>Discount Detail</h1>

<hr/>

@Html.AntiForgeryToken()

<div class="row">
    <image src="@Model.DiscountImage" id="DiscountImage" name="DiscountImage" class="image-container">
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="DiscountDescription" class="control-label"></label>
            <span class="form-control">@Model.DiscountDescription</span>
        </div>
        <div class="form-group">
            <label asp-for="DiscountID" class="control-label"></label>
            <span class="form-control">@Model.DiscountID</span>
        </div>
        <div class="form-group">
            <label asp-for="DiscountActive" class="control-label"></label>
            <span class="form-control">@Model.DiscountActive</span>
        </div>      
        <div class="form-group">
            <label asp-for="DiscountAmount" class="control-label"></label>
            <span class="form-control">@Model.DiscountAmount</span>
        </div>
        <div class="form-group">
            <label asp-for="DiscountPercent" class="control-label"></label>
            <span class="form-control">@Model.DiscountPercent.ToString("0%")</span>
        </div>
        <div class="form-group">
            <label asp-for="ExpirationDate" class="control-label"></label>
            <span class="form-control">@Model.ExpirationDate.ToString("yyyy-MM-dd")</span>
        </div>
        <div class="form-group">
            <label asp-for="Keywords" class="control-label"></label>
            <span class="form-control">@Model.Keywords</span>
        </div>
        <div class="form-group">
            <label asp-for="ProductID" class="control-label"></label>
            <span class="form-control">@Model.ProductID</span>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <span class="form-control">@Model.Category</span>
        </div>
        <div class="form-group">
            <label asp-for="SubCategory" class="control-label"></label>
            <span class="form-control">@Model.SubCategory</span>
        </div>      
        <div class="form-group">
            <label asp-for="Brand" class="control-label"></label>
            <span class="form-control">@Model.Brand</span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <span class="form-control">@Model.CreatedDate.ToString("yyyy-MM-dd")</span>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

