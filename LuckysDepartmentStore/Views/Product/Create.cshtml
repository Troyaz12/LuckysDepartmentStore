@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {
        // Function to handle dropdown filtering

        function handleDropdownFilter(inputId, dropdownClass) {
            $(inputId).on('keyup', function () {
                var filter = this.value.toLowerCase();
                var items = document.querySelectorAll(dropdownClass + ' li');
                items.forEach(function (item) {
                    var text = item.textContent.toLowerCase();
                    item.style.display = text.includes(filter) ? '' : 'none';
                });
            });

            $(dropdownClass + ' .dropdown-item').on('click', function () {
                $(inputId).val($(this).text());
            });
        }

        // Apply the function to each dropdown
        handleDropdownFilter('#Color', '.dropdown-menu[aria-labelledby="Color"]');
        handleDropdownFilter('#Category', '.dropdown-menu[aria-labelledby="Category"]');
        handleDropdownFilter('#SubCategory', '.dropdown-menu[aria-labelledby="SubCategory"]');
        handleDropdownFilter('#Brand', '.dropdown-menu[aria-labelledby="Brand"]');
    });

</script>