@using LuckysDepartmentStore.Utilities
@model IEnumerable<LuckysDepartmentStore.Models.ViewModels.Discount.DiscountVM>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css" rel="stylesheet"> <!-- Include jQuery -->
</head>

@if (ViewBag.ErrorMessage == null)
{
    <div id="carouselExample" class="carousel carousel-dark slide pb-5 extra-margin">
        <div class="carousel-inner pt-3 pb-3">
            <div class="carousel-item active">
                <a asp-action="SearchProduct" asp-route-category="coats" asp-route-subCategory="Womens">
                    <img src="img/InUse/PromotionalAds/winterCoats.jpg" class="d-block max-height" alt="Winter Coats Ad">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-subCategory="mens" asp-route-brand="polar wear" asp-route-category="coats">
                    <img src="img/InUse/PromotionalAds/MensPolarWearCoats.png" class="d-block max-height" alt="Mens Polar wear coats.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-category="sweaters">
                    <img src="img/InUse/PromotionalAds/WinterSweaters.png" class="d-block max-height" alt="sweaters.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-searchString="kids winter wear">
                    <img src="img/InUse/PromotionalAds/kidsWinterWear.png" class="d-block max-height" alt="Kids Winter Coats.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-subCategory="mens" asp-route-category="boots" asp-route-searchString="winter">
                    <img src="img/InUse/PromotionalAds/menswinterboots.png" class="d-block max-height" alt="Mens Winter Boots.">
                </a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div style="background-color: #e0f7fa" class="pt-5">
        <h1 class="text-center big-header">Discounts</h1>
        <h2 class="text-center small-header">Check out out weekly discounts.</h2>

        <div class="container text-center custom-container">
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var discount in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <a asp-action="SearchDiscount" asp-route-subCategorySelection="@discount.SubCategorySelection" asp-route-categorSelection="@discount.CategorySelection"
                                asp-route-brandSelection="@discount.BrandSelection" asp-route-productID="@discount.ProductID" asp-route-discountTags="@discount.DiscountTag">
                                    <img src="@discount.DiscountImage" id="DiscountImage" name="DiscountImage" class="image-fluid image-containerDiscount" alt="Discount Image">
                                </a>
                            </div>
                        </div>
                    }

                }
            </div>
        </div>
    </div>
}
else
{
    <p>@ViewBag.ErrorMessage</p>
}

