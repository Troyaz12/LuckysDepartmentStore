@using LuckysDepartmentStore.Utilities
@model IEnumerable<LuckysDepartmentStore.Models.ViewModels.Discount.DiscountVM>
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css" rel="stylesheet"> <!-- Include jQuery -->
</head>

<div id="failure" class="alert alert-danger align-items-center" role="alert" style="display: none;">
    <i class="fas fa-exclamation-triangle me-2 icon" aria-label="Danger"></i>
    <div class="message">
        @TempData["FailureMessage"]
    </div>
    <button type="button" class="btn-close close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

    <div id="carouselExample" class="carousel carousel-dark slide pb-1">
        <div class="carousel-inner pt-3 pb-3">
            <div class="carousel-item active">
                <a asp-action="SearchProduct" asp-route-category="Women's" asp-route-subCategory="coats">
                <img src="img/InUse/PromotionalAds/winterCoats.png" class="carousel-banner" style="width:80%" alt="Winter Coats Ad">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-subCategory="men's" asp-route-brand="polar wear" asp-route-subCategory="coats">
                <img src="img/InUse/PromotionalAds/MensPolarWearCoats.png" class="carousel-banner" style="width:80%" alt="Mens Polar wear coats.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-subCategory="sweaters">
                <img src="img/InUse/PromotionalAds/WinterSweaters.png" class="carousel-banner" style="width:80%" alt="sweaters.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-searchString="kids winter wear">
                <img src="img/InUse/PromotionalAds/kidsWinterWear.png" class="carousel-banner" style="width:80%" alt="Kids Winter Coats.">
                </a>
            </div>
            <div class="carousel-item">
                <a asp-action="SearchProduct" asp-route-Category="men's" asp-route-subCategory="boots" asp-route-searchString="winter">
                <img src="img/InUse/PromotionalAds/mensboots.png" class="carousel-banner" style="width:80%" alt="Mens Winter Boots.">
                </a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div style="border-radius: 10px;" class="pt-3 pb-5">
        <h1 class="text-center small-header">Weekly discounts.</h1>
        <div class="container text-center custom-container">
            <div class="row">
                @if (Model != null)
                {
                    @foreach (var discount in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <a asp-action="SearchDiscount" asp-route-subCategorySelection="@discount.SubCategorySelection" asp-route-categorSelection="@discount.CategorySelection"
                                asp-route-brandSelection="@discount.BrandSelection" asp-route-productID="@discount.ProductID" asp-route-discountTags="@discount.DiscountTag"
                                asp-route-discountDescription = "@discount.DiscountDescription">
                                    <img src="@discount.DiscountImage" id="DiscountImage" name="DiscountImage" class="image-fluid image-containerDiscount" alt="Discount Image">
                                </a>
                            </div>
                        </div>
                    }

                }
            </div>
            <div class="row banner-row ">
            <a asp-action="SearchDiscount" asp-route-discountTags="Clearance" asp-route-discountDescription= "Clearance Items" class="banner-link">
                   <img src="img/InUse/PromotionalAds/ClearanceBanner.png" class="banner-image" alt="Clearance Banner">
                </a>
            </div>
        </div>
    </div>
