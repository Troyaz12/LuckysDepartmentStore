@using LuckysDepartmentStore.Models.ViewModels.Consumer
@model List<PaymentOptionsVM>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<head>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css" rel="stylesheet">

</head>


<div class="row">
    <div class="col-md-4">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="SelectedPaymentOptionsID" id="@Model[i].PaymentOptionsID" value="@Model[i].PaymentOptionsID">
                <label class="form-check-label" for="@Model[i].PaymentOptionsID">
                    <span>
                        @Model[i].FirstName
                    </span>
                    <span>
                        @Model[i].LastName
                    </span>
                    <span>
                        @Model[i].BillingAddress1
                    </span>
                    @if (!string.IsNullOrEmpty(Model[i].BillingAddress2))
                    {
                        <span>
                            @Model[i].BillingAddress2
                        </span>
                    }
                    <span>
                        @Model[i].City
                    </span>
                    <span>
                        @Model[i].State
                    </span>
                    <span>
                        @Model[i].ZipCode
                    </span>
                    <span>
                        @Model[i].AccountNumber
                    </span>
                    <span>
                        @Model[i].CvcCode
                    </span>
                </label>
                <input type="hidden" name="PaymentOptions[@i].FirstName" value="@Model[i].FirstName" />
                <input type="hidden" name="PaymentOptions[@i].LastName" value="@Model[i].LastName" />
                <input type="hidden" name="PaymentOptions[@i].BillingAddress1" value="@Model[i].BillingAddress1" />
                <input type="hidden" name="PaymentOptions[@i].BillingAddress2" value="@Model[i].BillingAddress2" />
                <input type="hidden" name="PaymentOptions[@i].City" value="@Model[i].City" />
                <input type="hidden" name="PaymentOptions[@i].State" value="@Model[i].State" />
                <input type="hidden" name="PaymentOptions[@i].ZipCode" value="@Model[i].ZipCode" />
                <input type="hidden" name="PaymentOptions[@i].AccountNumber" value="@Model[i].AccountNumber" />
                <input type="hidden" name="PaymentOptions[@i].CvcCode" value="@Model[i].CvcCode" />
                <input type="hidden" name="PaymentOptions[@i].PaymentOptionsID" value="@Model[i].PaymentOptionsID" />
            </div>
        }
    </div>
</div>

