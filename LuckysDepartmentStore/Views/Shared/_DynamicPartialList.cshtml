@model LuckysDepartmentStore.Models.ViewModels.Product.ProductVM

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

 
    <ul>
      
    @if (Model != null)
    {
        
        @foreach(var item in Model.ColorProduct)
        {

            <li>

                <label for="ColorID">ColorID</label>
                @Html.TextBoxFor(model => @item.ColorID, new { @readonly = "readonly" })

               

                <label for="Name">Name</label>
                <input name="Name" type="text" value="@item.Name" readonly="readonly">

                <label for="Quantity">Quantity</label>
                <input name="Quantity" type="number" value="@item.Quantity">
            </li>
        }
    }

    </ul>
